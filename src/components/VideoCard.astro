---
interface Props {
  title: string;
  description?: string;
  url: string;
  category?: string;
}

const { title, description, url, category } = Astro.props as Props;
---

<article class="card p-4 space-y-3">
  <div class="aspect-video overflow-hidden rounded-xl bg-slate-100">
    <iframe
      src={url}
      title={title}
      class="w-full h-full"
      loading="lazy"
      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
      allowfullscreen></iframe>
  </div>
  <div class="space-y-1">
    <h3 class="text-lg font-semibold text-slate-900">{title}</h3>
    {category && <p class="text-sm text-indigo-700 font-semibold">{category}</p>}
    {description && <p class="text-sm text-slate-700">{description}</p>}
  </div>
</article>
