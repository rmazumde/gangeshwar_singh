---
import BaseLayout from "../../layouts/BaseLayout.astro";
import SectionHeader from "../../components/SectionHeader.astro";
import { getEntryBySlug } from "astro:content";

const page = await getEntryBySlug("pages", "professional-career");
const { Content } = page ? await page.render() : { Content: null };
---

<BaseLayout title="Professional Career | Gangeshwar Singh" description={page?.data.tagline}>
  <section class="section-shell pt-10 pb-14 space-y-8">
    <SectionHeader eyebrow="Profile" title="Professional Career" description={page?.data.tagline} />
    <div class="grid gap-8 lg:grid-cols-[1.1fr,0.9fr] items-start">
      <div class="space-y-6">
        <div class="card p-6 prose-content text-slate-700">
          {Content && <Content />}
        </div>
        <div class="card p-6 space-y-4">
          <SectionHeader title="Career timeline" description="Structured, mobile-friendly timeline for quick scanning." />
          <div class="space-y-5">
            {page?.data.timeline?.map((item) => (
              <div class="relative pl-6">
                <span class="absolute left-0 top-2 h-3 w-3 rounded-full bg-indigo-500"></span>
                <p class="text-sm uppercase tracking-wide text-slate-500">{item.period}</p>
                <h3 class="text-lg font-semibold text-slate-900">{item.role}</h3>
                {item.location && <p class="text-sm text-slate-500">{item.location}</p>}
                {item.summary && <p class="text-slate-700">{item.summary}</p>}
              </div>
            ))}
          </div>
        </div>
      </div>
      <div class="card p-6 space-y-3">
        <SectionHeader title="Honors" description="Medals and citations earned over three decades." />
        <ul class="space-y-2 text-slate-700">
          <li>President’s Police Medal for Meritorious Service</li>
          <li>President’s Police Medal for Distinguished Service</li>
          <li>West Bengal Chief Minister’s Police Medal for Outstanding Service</li>
          <li>Director General’s DISC</li>
        </ul>
      </div>
    </div>
  </section>
</BaseLayout>
